# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# DynamoDB
DYNAMODB_TABLE=aare-ai-dev

# S3 Buckets
S3_ONTOLOGY_BUCKET=aare-ai-ontologies-dev
S3_PROOF_BUCKET=aare-ai-proofs-dev

# API Configuration
API_KEY=your-api-key-here
API_ENDPOINT=https://your-api.execute-api.us-east-1.amazonaws.com/dev

# Verification Settings
DEFAULT_TIMEOUT_MS=1000
MAX_CACHE_AGE_SECONDS=3600

# Monitoring
CLOUDWATCH_NAMESPACE=aare.ai
METRICS_ENABLED=true

# Security
SIGNING_KEY=your-signing-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Feature Flags
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_AUDIT_LOG=true

# Development
DEBUG=false
LOG_LEVEL=INFO